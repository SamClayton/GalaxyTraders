# accounts-github               # Github user login
# accounts-google               # Google user login
ian:accounts-ui-bootstrap-3     # UI for user accounts including Facebook and username/password logins
alanning:roles                  # Roles for users, including ACLs (?)
utilities:avatar                # Support for user's profile photo
# useraccounts:flow-routing     # UserAccounts package providing routes configuration capability via kadira:flow-router
# useraccounts:bootstrap        # Accounts Templates styled for Twitter Bootstrap

browser-policy@1.1.0                # CSP package. Careful, because it's already caused some CSP headaches with web fonts
underscorestring:underscore.string  # String manipulation extensions for Underscore.js javascript library (used for number string formatting)
3stack:bignumber@4.0.2              # Dealing with large numbers. AAT deals with these often

# Note: aldeed:simple-schema has been replaced with an npm package that these depend on. Meteor pkg deprecated.
aldeed:schema-index             # Control Mongo indexes through SimpleSchema
aldeed:collection2-core         # Added because the Meteor Guide covers how to auto-enforce Simple Schema on mutators (CUD ops)
aldeed:autoform@6.2.0           # Works with collection2 and schemas to autogenerate forms
matadur:autoform-bs-datetimepicker
tsega:bootstrap3-datetimepicker@=3.1.3_3
# momentjs:moment                 # Dependency of autoform, but also useful for general Date math
momentjs:moment
risul:moment-timezone

juliancwirko:s-alert            # Simple and fancy notifications / alerts / errors for Meteor
juliancwirko:s-alert-jelly      # Jelly visual effect for s-alert

